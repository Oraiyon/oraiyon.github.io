model Post {
  id       String    @id @default(uuid())
  postDate DateTime  @default(now())
  author   User      @relation(fields: [authorId], references: [id])
  authorId String
  text     String    @db.VarChar(100)
  Comments Comment[]
  Likes    Likes[]
  Reply    Reply[]
  image    String?

  @@map("posts")
}

model Likes {
  id        String   @id @default(uuid())
  likeDate  DateTime @default(now())
  likedBy   User     @relation(fields: [likedById], references: [id])
  likedById String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String

  @@map("likes")
}

model Comment {
  id          String   @id @default(uuid())
  commentDate DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  text        String   @db.VarChar(100)
  post        Post     @relation(fields: [postId], references: [id])
  postId      String
  Reply       Reply[]
  // Replies     Comment[] @relation("Reply")
  // reply       Comment?  @relation("Reply", fields: [replyId], references: [id])
  // replyId     String?

  @@map("comments")
}

model Reply {
  id        String   @id @default(uuid())
  replyDate DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  text      String   @db.VarChar(100)
  replyTo   Comment  @relation(fields: [replyToId], references: [id])
  replyToId String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String

  @@map("replies")
}
