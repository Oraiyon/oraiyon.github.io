generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  username       String    @unique @db.VarChar(20)
  password       String
  Followers      Follow[]  @relation("Follower")
  Following      Follow[]  @relation("Following")
  // SentRequests     Request[] @relation("SentRequests")
  // ReceivedRequests Request[] @relation("ReceivedRequests")
  Posts          Post[]
  Comments       Comment[]
  Likes          Likes[]
  Reply          Reply[]
  profilePicture String?

  @@map("users")
}

model Follow {
  id           String   @id @default(uuid())
  followedDate DateTime @default(now())
  sender       User     @relation("Follower", fields: [senderId], references: [id])
  senderId     String
  receiver     User     @relation("Following", fields: [receiverId], references: [id])
  receiverId   String

  @@map("follows")
}

